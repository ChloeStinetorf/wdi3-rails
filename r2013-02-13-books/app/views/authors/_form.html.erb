<%= form_for @author do |f| %>
  <%= f.label :name, "Author's Name" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :image, "Author's Image" %><br>
  <%= f.text_field :image %><br>
  <%= f.label :genre, "Type of Literature" %><br>
  <%= f.text_field :genre %><br>
  <%= f.submit %><br>
<% end %>