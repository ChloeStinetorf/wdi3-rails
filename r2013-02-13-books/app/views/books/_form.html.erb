<%= form_for @book do |f| %>
  <%= f.label :author_id %><br>
  <%= f.select :author_id, Author.all.map{|author| [author.name, author.id]}, :include_blank => true, :prompt => "Select Author:" %><br>
  <%= f.label :title, "Book Title" %><br>
  <%= f.text_field :title %><br>
  <%= f.label :image, "Book Cover Image" %><br>
  <%= f.text_field :image %><br>
  <%= f.label :year, "Year of Publication"  %><br>
  <%= f.text_field :year%><br>
  <%= f.submit %><br>
<% end %>