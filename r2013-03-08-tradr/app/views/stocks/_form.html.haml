.row
  .large-3.columns
    = form_for @stock, :remote => true do |f|
      = f.label :symbol
      = f.text_field :symbol, :autofocus => true
      = f.label :shares
      = f.text_field :shares
      = f.submit nil, :class => 'button tiny radius success'
      = link_to 'Cancel', '#', :id => 'cancel_stock_form', :class => 'button tiny radius alert'
  .large-9.columns