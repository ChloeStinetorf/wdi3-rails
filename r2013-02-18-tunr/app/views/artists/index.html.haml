#artists
  %div= button_to('Add', new_artist_path, :method => 'get', :class => 'success button radius') if is_admin
  %h1 Artists
  %table
    %tr
      %th name
      %th image
    - @artists.each do |artist|
      %tr{:class => cycle('row0', 'row1')}
        %td= link_to(artist.name, artist_path(artist))
        %td= image_tag(artist.image)
        %td= link_to('Edit', edit_artist_path(artist), :class => 'success button tiny radius') if is_admin
        %td= link_to('Delete', artist, :method => 'delete', :class => 'alert button tiny radius') if is_admin
