%h3 priorities

%script
  var priorities = [];

%ul.pri_list
  - @priorities.each do |priority|
    %li
      %script
        = "priorities.push({id:#{priority.id}, name:'#{priority.name}', value: #{priority.value}, color: '#{priority.color}'});"
      .priority
        = image_tag('famfamfam/arrow_up.png', :class => 'up')
        = image_tag('famfamfam/arrow_down.png', :class => 'down')
      .priority.color.hide=  priority.color
      .priority= priority.name
      .priority.hide.value= priority.value
      .priority.hide= priority.id
      .clear

.row
  .six.columns
    .new
      = button_tag 'New Priority', :id => 'new_priority', :class => 'button success';
    .form.hide
      = form_tag do
        = label_tag 'name'
        = text_field_tag 'color', nil, :class => 'minicolors'
        = text_field_tag 'name', nil, :autofocus  => true
        = label_tag 'value'
        = text_field_tag 'value'
        = hidden_field_tag 'priority_id'
        = submit_tag 'Save', :id => 'create_priority', :class => 'button success';
        = submit_tag 'Update', :id => 'update_priority', :class => 'button info';
        = link_to('Cancel', '#', :id => 'cancel_priority', :class => 'button alert');
  .six.columns

