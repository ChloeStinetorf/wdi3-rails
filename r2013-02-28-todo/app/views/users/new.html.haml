.row
  .twelve.columns
    %h1 Create new User

.row
  .six.columns
    = form_for @user do |f|
      = f.label :name, :autofocus => 'true'
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = f.submit nil, :class => 'round button success'
  .six.columns