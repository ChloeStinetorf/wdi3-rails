.row
  .twelve.columns
  %h3 your meeting in the middle awaits..
.row
  .five.columns
    = render(:partial => '/shared/errors', :locals => {:object => @user})
    = form_for @user do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :image
      = f.text_field :image
      = f.label :bio
      = f.text_field :bio
      = f.label :address
      = f.text_field :address
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = f.submit "Create Account", :class => 'button radius success'
  .seven.columns


