.row
  .large-12.columns
  %h3 sign in:
.row
  .large-5.columns
    = form_tag '/login' do
      = label_tag 'name'
      = text_field_tag 'name', nil, :autofocus => true
      = label_tag 'email'
      = text_field_tag 'email'
      = label_tag  'password'
      = password_field_tag 'password'
      = submit_tag 'Submit', :class => 'button success'
  .large-7.columns